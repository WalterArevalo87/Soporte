@model IEnumerable<Soporte.Models.AtmsModel>

@{
    ViewData["Title"] = "Listado de ATMs";
}

<h2>Listado de ATMs</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo ATM</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.nombre)</th>
            <th>@Html.DisplayNameFor(model => model.direccion)</th>
            <th>@Html.DisplayNameFor(model => model.tipo)</th>
            <th>@Html.DisplayNameFor(model => model.modelo)</th>
            <th>Agencia</th>
            <th>Banco</th>
            <th>Gestor</th>
            <th>Mantenimiento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.modelo)</td>

                <!-- Relaciones -->
                <td>@item.AgenciasModel?.nombre</td>
                <td>@item.BancosModel?.nombre</td>
                <td>@item.GestoresModel?.nombres @item.GestoresModel?.apellido</td>
                <td>@item.MantenimientosModel?.tipo</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

